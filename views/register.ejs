<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('components/header') %>
    <title>Register</title>
  </head>
  <body>
    <%- include('nav-components/nav') %>

    <main class="main">
      <div class="container bg-light shadow-lg p-3 mb-5 bg-white">
        <img
          id="register-page"
          src="svg/register-page.svg"
          alt="ilustrator"
          width="350px"
          height="400px"
        />

        <div class="form">
          <div class="header d-flex justify-content-around">
            <h3>Sign Up</h3>

            <p>Have an account to <a href="/login">Sign in?</a></p>
          </div>

          <form action="/register" method="post">
            <div class="username d-flex">
              <div class="form-group">
                <label for="Name">Name Full</label>
                <input
                  type="text"
                  name="name"
                  autocomplete="name"
                  value="<%= oldInput.value('name') %>"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="Username">Username</label>
                <input
                  type="text"
                  name="username"
                  autocomplete="username"
                  class="form-control"
                  value="<%= oldInput.value('username') %>"
                />
              </div>
            </div>

            <div class="form-group">
              <label for="Email">Email</label>
              <input
                type="email"
                name="email"
                autocomplete="email"
                value="<%= oldInput.value('email') %>"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="Password">Password</label>
              <input
                type="password"
                placeholder="6+ Characters"
                autocomplete="new-password"
                name="password"
                id="password"
                class="form-control"
                value="<%= oldInput.value('password') %>"
              />
              <label for="show_password">
                <input type="checkbox" name="show_password" id="show_password">
                Show Password
              </label>
            </div>

            <% if (messages.error != undefined) { %> <%
            messages.error.forEach(msg => { %>
            <div class="alert alert-danger" role="alert">
              <%= msg %>
            </div>
            <% }) %> <% } %>

            <div class="form-group btn-choose d-flex justify-content-around">
              <input type="submit" value="Create Account" class="submit" />
              OR
              <div>
                <a href="/auth/google" class="btn btn-light"
                  ><img src="svg/google.svg" width="30px" alt="google"
                /></a>
                <a href="/auth/facebook" class="btn btn-light"
                  ><img src="svg/facebook.svg" width="30px" alt="fb"
                /></a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('components/footer') %>
  </body>
</html>
